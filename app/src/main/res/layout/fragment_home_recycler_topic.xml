<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/home_recycler_topic_img"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_200"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_recycler_topic_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="爱生活"
            android:textSize="22sp"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="@id/home_recycler_topic_img"
            app:layout_constraintRight_toRightOf="@id/home_recycler_topic_img"
            app:layout_constraintTop_toBottomOf="@id/home_recycler_topic_img" />

        <TextView
            android:id="@+id/home_recycler_topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有品有范有时尚"
            android:textColor="#D9D9D9"
            app:layout_constraintLeft_toLeftOf="@id/home_recycler_topic_img"
            app:layout_constraintRight_toRightOf="@id/home_recycler_topic_img"
            app:layout_constraintTop_toBottomOf="@id/home_recycler_topic_text" />

    </android.support.constraint.ConstraintLayout>



</RelativeLayout>